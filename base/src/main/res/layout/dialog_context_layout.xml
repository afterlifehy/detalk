<?xml version="1.0" encoding="utf-8"?>
<com.aries.ui.view.radius.RadiusLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_20"
    android:paddingTop="@dimen/dp_24"
    android:paddingEnd="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20"
    app:rv_backgroundColor="@color/color_ff141414"
    app:rv_radius="@dimen/dp_27">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        tools:text="title" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        tools:text="这里是辅助说明文字单行这里是辅助说明文字单行这里是辅助说明文字单行这里是辅助说明文字单行" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/rtv_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/white_40_color"
            android:textSize="@dimen/sp_16"
            app:rv_backgroundColor="@color/transparent"
            app:rv_radius="@dimen/dp_6"
            app:rv_strokeColor="@color/white_40_color"
            app:rv_strokeWidth="@dimen/dp_05"
            tools:text="CANCEL" />

        <TextView
            android:id="@+id/rtv_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_weight="1"
            android:background="@drawable/shape_yellow_bg"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />
    </LinearLayout>

</com.aries.ui.view.radius.RadiusLinearLayout>