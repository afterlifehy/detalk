<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_noWallet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_75"
    android:paddingTop="@dimen/dp_110"
    android:paddingEnd="@dimen/dp_75">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_150" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:text="@string/please_import_or_create_wallet_first"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/rtv_goNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:background="@drawable/shape_yellow_bg"
        android:paddingStart="@dimen/dp_33"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_33"
        android:paddingBottom="@dimen/dp_8"
        android:text="@string/go_now"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold" />
</LinearLayout>