<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_home_toolbar" />

    <include
        android:id="@+id/layout_noWallet"
        layout="@layout/layout_no_wallet" />

    <include
        android:id="@+id/layout_noBox"
        layout="@layout/layout_no_box"
        android:visibility="gone" />

    <include
        android:id="@+id/layout_boxList"
        layout="@layout/layout_box_list"
        android:visibility="gone" />
</LinearLayout>