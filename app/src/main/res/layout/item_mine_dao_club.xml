<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ff141414"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_05"
        android:background="@color/color_ff434343" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            tools:text="ETH DAO" />

        <TextView
            android:id="@+id/tv_member"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <FrameLayout
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.aries.ui.view.radius.RadiusTextView
                android:id="@+id/rtv_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="end"
                android:paddingStart="@dimen/dp_12"
                android:paddingTop="@dimen/dp_4"
                android:paddingEnd="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_4"
                android:text="@string/SET"
                android:textColor="@color/color_ffffee00"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                app:rv_backgroundColor="@color/transparent"
                app:rv_radius="@dimen/dp_6"
                app:rv_strokeColor="@color/color_ffd6fe00"
                app:rv_strokeWidth="@dimen/dp_05" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>